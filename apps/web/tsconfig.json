{
  "extends": "@profesional/config/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@contracts/*": [
        "../../packages/contracts/src/*"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
      "@config/*": [
        "../../packages/config/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
